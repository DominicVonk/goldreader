{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "llrp2json from LTK",
            "program": "${workspaceFolder}/bin/llrp2json.ts",
            "args": [
                "${workspaceFolder}/test/dx101/LTK/Tests/dx101/dx101_d.bin",
                "-o",
                "${workspaceFolder}/generated_dx101_d.json"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "stopOnEntry": false,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "llrp2json from generated",
            "program": "${workspaceFolder}/bin/llrp2json.ts",
            "args": [
                "${workspaceFolder}/generated_dx101_d.bin",
                "-o",
                "${workspaceFolder}/_generated_dx101_d.json"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "stopOnEntry": false,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "json2llrp from generated",
            "program": "${workspaceFolder}/bin/json2llrp.ts",
            "args": [
                "${workspaceFolder}/generated_dx101_d.json",
                "-o",
                "${workspaceFolder}/generated_dx101_d.bin"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "console": "integratedTerminal",
            "sourceMaps": true,
            "stopOnEntry": false,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "preLaunchTask": {
                "type": "typescript",
                "tsconfig": "tsconfig.json",
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": ["$tsc"],
                "presentation": {
                    "reveal": "silent",
                    "panel": "shared"
                }
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "stopOnEntry": false,
        }
    ]
}